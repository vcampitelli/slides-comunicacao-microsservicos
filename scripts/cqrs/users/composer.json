{
    "name": "vcampitelli/cqrs-users",
    "description": "Simple Users App to demonstrate CRQS",
    "keywords": [
        "microservice",
        "cqrs",
        "event sourcing"
    ],
    "homepage": "https://github.com/vcampitelli/workshop-microservice",
    "license": "private",
    "authors": [
        {
            "name": "Vin√≠cius Campitelli",
            "email": "eu@viniciuscampitelli.com",
            "homepage": "https://viniciuscampitelli.com/"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-mongodb": "*",
        "ext-pdo": "*",
        "charm/uuid": "^0.0.6",
        "mongodb/mongodb": "^1.9",
        "vcampitelli/cqrs-core": "dev-master"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Users\\": "src/"
        }
    },
    "scripts": {
        "start": [
            "composer update",
            "php -S 0.0.0.0:80 -t public"
        ],
        "command-handler": [
            "composer update",
            "php bin/command-handler.php"
        ],
        "event-handler": [
            "composer update",
            "php bin/event-handler.php"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "/srv/framework/core"
        }
    ]
}
